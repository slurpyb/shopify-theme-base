{
  "sections": {
    "main": {
      "type": "product-template",
      "blocks": {
         "vendor": {
          "type": "text",
          "settings": {
            "text": "{{ product.vendor }}",
            "text_style": "uppercase"
          }
        },
        "title": {
          "type": "title"
        },
        "price": {
          "type": "price"
        },
        "description": {
          "type": "description"
        },
        "variant_picker": {
          "type": "variant_picker",
          "settings": {
            "picker_type": "button"
          }
        },
        "quantity_selector": {
          "type": "quantity_selector"
        },
        "buy_buttons": {
          "type": "buy_buttons",
          "settings": {
            "show_dynamic_checkout": true,
            "show_gift_card_recipient": true
          }
        },
      },
      "block_order": [
        "vendor",
        "title",
        "price",
        "description",
        "variant_picker",
        "quantity_selector",
        "buy_buttons"
      ]
    },
  },
  "order": [
    "main",
  ]
}
