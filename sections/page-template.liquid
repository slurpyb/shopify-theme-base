<script type="application/json" data-section-type="page-template" data-section-id="{{ section.id }}">
</script>
<section class="section section__root section-{{ section.id }}">
	<div class="section__inner">
		<div class="section__header">
			<h1 class="title page-title">
				{{ page.title | escape }}
			</h1>
		</div>

		<div class="section__content">
			{{ page.content }}
		</div>
		<div class="section__footer">

		</div>
	</div>
</section>


{% schema %}
{
	"name": "t:sections.main-page.name",
	"tag": "section",
	"class": "section",
	"settings": [
		{
			"type": "header",
			"content": "t:sections.all.padding.section_padding_heading"
		},
		{
			"type": "range",
			"id": "padding_top",
			"min": 0,
			"max": 100,
			"step": 4,
			"unit": "px",
			"label": "t:sections.all.padding.padding_top",
			"default": 36
		},
		{
			"type": "range",
			"id": "padding_bottom",
			"min": 0,
			"max": 100,
			"step": 4,
			"unit": "px",
			"label": "t:sections.all.padding.padding_bottom",
			"default": 36
		}
	]
}
{% endschema %}
